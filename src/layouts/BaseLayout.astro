---
/**
 * BaseLayout - Main layout component for all pages
 *
 * Provides:
 * - HTML5 document structure with Norwegian language
 * - Meta tags for charset, viewport, favicon
 * - Google Fonts preconnect for Poppins and Crimson Pro
 * - Global styles via Tailwind
 * - Slot for page content
 */

interface Props {
  title: string;
}

const { title } = Astro.props;

import '@/styles/global.css';
---

<!doctype html>
<html lang="nb">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- Google Fonts preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@300;400;700&family=Poppins:wght@300;400;700&display=swap"
    />
  </head>
  <body class="font-sans bg-site">
    <slot />
  </body>
</html>
