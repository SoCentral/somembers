---
/**
 * Member detail page - Dynamic route for individual member profiles
 *
 * Uses getStaticPaths() to generate all member pages at build time.
 * Respects privacy settings for contact details and social profiles.
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import { getConfigFromEnv, fetchMembers } from '@/lib/api';
import { transformAllMembers } from '@/lib/transform';
import { getSDGsByNames } from '@/data/sdg-goals';
import type { TransformedMember } from '@/lib/types';

export async function getStaticPaths() {
  const config = getConfigFromEnv();
  const rawMembers = await fetchMembers(config);
  const members = transformAllMembers(rawMembers);

  return members.map((member) => ({
    params: { slug: member.slug },
    props: { member },
  }));
}

interface Props {
  member: TransformedMember;
}

const { member } = Astro.props;

// Get SDG objects with colors for display
const sdgGoals = getSDGsByNames(member.sdgs);
---

<BaseLayout title={`${member.name} | SoCentral`}>
  <section
    class="container w-full mt-8 mb-10 lg:my-10 lg:w-3/5 mx-auto font-sans px-4"
    aria-label="Medlemsprofil"
  >
    <!-- Back link -->
    <div class="text-right">
      <a href="/" class="underline text-blue-700">Tilbake til medlemmer</a>
    </div>

    <!-- Name heading -->
    <h1 class="mt-10 text-4xl leading-snug font-bold">{member.name}</h1>

    <!-- Team link -->
    <a
      href={`/teams/${member.teamSlug}`}
      class="block mt-2 lg:mt-2 text-xl font-light underline"
      aria-label={`Les mer om ${member.teamName}`}
    >
      {member.teamName}
    </a>

    <!-- Image and bio -->
    <div class="lg:flex mt-8">
      <img
        class="rounded-lg object-cover card-img bg-white"
        src={member.image}
        alt={`Profilbilde av ${member.name}`}
        loading="lazy"
      />
      {member.bio && (
        <p class="mt-8 lg:mt-0 lg:pl-5 leading-relaxed text-xl font-serif font-thin">
          {member.bio}
        </p>
      )}
    </div>

    <!-- Contact and social links -->
    <div class="mt-8">
      {/* Contact details - only shown if hideContactDetails is false */}
      {!member.privacy.hideContactDetails && (
        <>
          {member.phone && (
            <a
              href={`tel:${member.phone}`}
              class="mr-2 inline-flex items-center bg-transparent text-gray-800 font-semibold py-2 px-4 border border-gray-800 rounded-full"
              aria-label="Ring med telefon"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path
                  d="M18.48 22.926l-1.193.658c-6.979 3.621-19.082-17.494-12.279-21.484l1.145-.637 3.714 6.467-1.139.632c-2.067 1.245 2.76 9.707 4.879 8.545l1.162-.642 3.711 6.461zm-9.808-22.926l-1.68.975 3.714 6.466 1.681-.975-3.715-6.466zm8.613 14.997l-1.68.975 3.714 6.467 1.681-.975-3.715-6.467z"
                />
              </svg>
            </a>
          )}
          {member.email && (
            <a
              href={`mailto:${member.email}`}
              class="mr-2 mt-4 lg:mt-0 inline-flex items-center bg-transparent text-gray-800 font-semibold py-2 px-4 border border-gray-800 rounded-full"
              aria-label="Send epost"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path
                  d="M12 12.713l-11.985-9.713h23.97l-11.985 9.713zm0 2.574l-12-9.725v15.438h24v-15.438l-12 9.725z"
                />
              </svg>
            </a>
          )}
        </>
      )}

      {/* Social profiles - only shown if hidePublicProfiles is false */}
      {!member.privacy.hidePublicProfiles && (
        <>
          {member.socialProfiles.twitter && (
            <a
              href={`https://www.twitter.com/${member.socialProfiles.twitter}`}
              class="mr-2 inline-flex items-center bg-transparent text-gray-800 font-semibold py-2 px-4 border border-gray-800 rounded-full"
              aria-label="Se twitter"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path
                  d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
                />
              </svg>
            </a>
          )}
          {member.socialProfiles.linkedin && (
            <a
              href={member.socialProfiles.linkedin}
              class="mt-4 lg:mt-0 inline-flex items-center bg-transparent text-gray-800 font-semibold py-2 px-4 border border-gray-800 rounded-full"
              aria-label="Se linkedin"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path
                  d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                />
              </svg>
            </a>
          )}
          {member.socialProfiles.instagram && (
            <a
              href={`https://www.instagram.com/${member.socialProfiles.instagram}`}
              class="mr-2 mt-4 lg:mt-0 inline-flex items-center bg-transparent text-gray-800 font-semibold py-2 px-4 border border-gray-800 rounded-full"
              aria-label="Se instagram"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path
                  d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                />
              </svg>
            </a>
          )}
          {member.socialProfiles.facebook && (
            <a
              href={`https://www.facebook.com/${member.socialProfiles.facebook}`}
              class="mr-2 mt-4 lg:mt-0 inline-flex items-center bg-transparent text-gray-800 font-semibold py-2 px-4 border border-gray-800 rounded-full"
              aria-label="Se facebook"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                <path
                  d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
                />
              </svg>
            </a>
          )}
        </>
      )}
    </div>

    <!-- SDG badges -->
    {sdgGoals.length > 0 && (
      <div class="mt-8">
        <h2 class="text-lg mb-2 font-bold">Bærekraftsmål</h2>
        <div class="flex flex-wrap gap-2">
          {sdgGoals.map((sdg) => (
            <span
              class="inline-block text-sm text-white py-2 px-4 rounded-full"
              style={`background-color: ${sdg.color};`}
            >
              {sdg.name}
            </span>
          ))}
        </div>
      </div>
    )}

    <!-- Tags -->
    {member.tags && member.tags.length > 0 && (
      <div class="mt-8">
        <h2 class="text-lg mb-2 font-bold">Tags</h2>
        <div class="flex flex-wrap gap-2">
          {member.tags.map((tag) => (
            <span class="inline-block text-sm bg-gray-700 text-white py-2 px-4 rounded-full">
              {tag}
            </span>
          ))}
        </div>
      </div>
    )}
  </section>
</BaseLayout>

<style>
  .card-img {
    height: 320px;
    width: 320px;
  }
</style>
