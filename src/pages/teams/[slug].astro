---
/**
 * Team detail page - Dynamic route for individual team profiles
 *
 * Uses getStaticPaths() to generate all team pages at build time.
 * Displays full team profile with member list.
 * Respects privacy settings for social profiles.
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import { getConfigFromEnv, fetchMembers, fetchCompanies } from '@/lib/api';
import { transformAllCompanies } from '@/lib/transform';
import { getSDGsByNames } from '@/data/sdg-goals';
import type { TransformedCompany } from '@/lib/types';

export async function getStaticPaths() {
  const config = getConfigFromEnv();
  const [rawCompanies, rawMembers] = await Promise.all([
    fetchCompanies(config),
    fetchMembers(config),
  ]);
  const companies = transformAllCompanies(rawCompanies, rawMembers);

  return companies.map((company) => ({
    params: { slug: company.slug },
    props: { company },
  }));
}

interface Props {
  company: TransformedCompany;
}

const { company } = Astro.props;

// Get SDG objects with colors for display
const sdgGoals = getSDGsByNames(company.sdgs);
---

<BaseLayout title={`${company.name} | SoCentral`}>
  <section
    class="container w-full mt-8 mb-10 lg:my-10 lg:w-3/5 mx-auto font-sans px-4"
    aria-label="Virksomhetsprofil"
  >
    <!-- Back link -->
    <div class="text-right">
      <a href="/teams" class="underline text-blue-700">Tilbake til virksomheter</a>
    </div>

    <!-- Name heading -->
    <h1 class="mt-10 text-4xl leading-snug font-bold">{company.name}</h1>

    <!-- Image and bio -->
    <div class="lg:flex mt-8">
      <img
        class="rounded-lg object-contain card-img bg-white"
        src={company.image}
        alt={`Logo for ${company.name}`}
        loading="lazy"
      />
      {company.bio && (
        <p class="mt-8 lg:mt-0 lg:pl-5 leading-relaxed text-xl font-serif font-thin">
          {company.bio}
        </p>
      )}
    </div>

    <!-- Website and social links -->
    <div class="mt-8">
      {company.url && (
        <a
          href={company.url}
          class="mr-2 inline-flex items-center bg-transparent text-gray-800 font-semibold py-2 px-4 border border-gray-800 rounded-full"
          aria-label="Besøk hjemmeside"
          target="_blank"
          rel="noopener noreferrer"
